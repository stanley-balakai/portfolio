---
import Card from "../components/Card.astro";
import Contact from "../components/Contact.astro";
import Technologies from "../components/Technologies.astro";
import Layout from "../layouts/Layout.astro";
import stanley from "/Me.png";

const projects = await Astro.glob('../projects/*.md');

---

<Layout class="bg-secondary">
	<div class="container mx-auto px-4 py-12 pt-56">
	  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
		  <div class="flex flex-col items-start md:pl-12">
		    <h1 class="text-6xl md:text-9xl font-bold font-sans text-accent fade-in-name">Stanley Balakai</h1>
		    <h2 class="text-lg md:text-3xl text-accent fade-in-name">Full-Stack Software Developer</h2>
		  </div>
		  <img class="hidden lg:w-1/3 md:w-1/3 container mx-auto border-accent border-4 rounded-xl img-hover md:block fade-in-image" src={stanley} alt="Developer">
	   </div>
	</div>
	
<h2 class=" text-center text-4xl font-bold text-primary magic-text pt-60">About Me</h2>
  <div class="container mx-auto px-4 py-12" id="hidden-card" >
	<div class="ABC mx-auto max-w-3xl">
	  <div class="relative group">
		<div class="flex items-center py-4 leading-none bg-secondary divide-x divide-gray-600 rounded-lg px-7 z-10">
		  <div class="w-full">
			<div class="px-4">
			  <p class="text-2xl text-primary font-light">Hi, I'm <strong class="font-bold">Stanley Balakai</strong>, a dedicated software developer with a passion for exploring the ever-changing landscape of technology. My journey as a self-taught programmer has instilled in me the importance of continuous learning and personal growth.
				<br/>
				<br/>
				I enjoy tackling new challenges head-on and am driven by the thrill of turning ideas into reality through code. In my downtime, I love trying out new recipes in the kitchen, playing sports or working out, spending time outdoors, and going out to eat with friends.
				<br/>
				<br/>
				As I continue to expand my knowledge and skills, I'm excited to embark on new adventures in the world of software development. Let's build something great together!</p>
			</div>
		  </div>
		</div>
	  </div>
	</div>
  </div>

  <div class="text-center pt-48">

	  <h1 class="text-3xl text-primary magic-text magic font-sans font-extrabold">Technologies</h1>
	  <p class="text-md text-primary">this is some of the stuff i've worked with</p>
  </div>

  <div class="pt-20">
	<div class="container mx-auto max-w-screen-lg">
	  <Technologies />
	</div>
  </div>
  


  <div class="container mx-auto px-4 py-12 pt-48">
	<div class=" mx-auto max-w-3xl">
	  <div class="text-center">
		<div class="flex items-center py-4 leading-none bg-secondary divide-x divide-gray-600 rounded-lg px-7 z-10">
		  <div class="w-full">
			<div class="px-4">
				<div class="magic">
					
				</div>
			  <h2 class="text-3xl text-primary magic-text magic font-sans font-extrabold">Projects</h2>
			  <p class="text-md text-primary">click to read more!</p>
			</div>
		</div>
	</div>
</div>
</div>
</div>


  <section class="align-center page-content">
	<div class="container mx-auto grid grid-cols-2 lg:grid-cols-4 gap-4 hover:cursor-pointer" id="hidden-card">
	  {projects.map(proj => (
		<Card >
		  <div class="card-element p-4 bg-secondary shadow-lg rounded-lg" data-slug={`/${proj.frontmatter.slug}`}>
			<h3 class="text-primary text-center text-xl font-bold">{proj.frontmatter.title}</h3>
			<p class="text-primary mt-2">{proj.frontmatter.tech}</p>

		  </div>
		</Card>
	  ))}
	</div>
  </section>


  <div class="text-center pt-48">

	  <h1 class="text-3xl text-primary magic-text magic font-sans font-extrabold">Contact Me</h1>
	  <p class="text-md text-primary">here are all the ways you can reach me!</p>
  </div>

  <div class="container mx-auto my-8" id="hidden-card">
	<div class="bg-secondary shadow-md rounded-xl p-6 w-full md:w-2/5 lg:w-1/4 mx-auto border-accent border-4">
	  <Contact />
	</div>
  </div>
  
  
  
  
   
  </Layout>
  

  <style>
	.group::before {
  content: "";
  position: absolute;
  inset: 0;
  background-image: linear-gradient(to right, #AFD34D, #91A1BF);
  filter: blur(10px);
  opacity: 0.5;
  transition: opacity 0.5s;
  border-radius: inherit;
  z-index: -1;
}

.group:hover::before {
  opacity: 1;
}

.img-hover {
  transition: transform 0.3s ease-in-out;
}

.img-hover:hover {
  transform: scale(1.1); /* Change 1.1 to the desired scaling factor */
}

:root {  
  --primary: #91A1BF;
  --accent: #AFD34D;
}

@keyframes background-pan {
  from {
    background-position: 0% center;
  }
  
  to {
    background-position: -200% center;
  }
}








.magic {
  display: inline-block;
  position: relative;
}

 .magic-text {
  animation: background-pan 3s linear infinite;
  background: linear-gradient(
    to right,
    var(--primary),
    var(--accent),
    var(--primary),
    var(--primary)
  );
  background-size: 200%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  white-space: nowrap;
}

@media (prefers-reduced-motion: reduce) {
	#hidden-card.show {
	  opacity: 1;
	}

  }

#hidden-card {
	  opacity: 0;
	  transition: all 1s ease-in-out;
	}

	#hidden-card.show {
	  opacity: 1;
	}

.fade-in-image {
  opacity: 0;
  animation: fadeIn 1s forwards;
  animation-delay: 1s;
}

.fade-in-name {
  opacity: 0;
  animation: fadeIn 1s forwards;
  animation-delay: 0.2s;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}

  </style>
  
  <script>

	document.querySelectorAll(".card-element").forEach((card) => {
	card.addEventListener("click", function () {
		const slug = this.getAttribute("data-slug");
		window.location.href = slug;
	});
	});

	const observer = new IntersectionObserver((entries) => {
		entries.forEach((entry) => {
			if (entry.intersectionRatio > 0) {
			entry.target.classList.add('show');
			} else {
			entry.target.classList.remove('show')
		}
	});
});


	const hiddenElements = document.querySelectorAll("#hidden-card")
	hiddenElements.forEach((element) => observer.observe(element));



  </script>
  
  
  
  


  
  