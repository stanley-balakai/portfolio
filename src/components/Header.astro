---
import logo from '/SB-Logo.png';
import BurgerMenu from './BurgerMenu.astro';
// import 'tailwindcss/tailwind.css';
---

<header class="header bg-gradient-to-b from-blue-950 shadow-sm fixed w-full z-10">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center py-2 md:py-4">
        <div class="logo cursor-pointer">
          <img src={logo} alt="Logo" class="h-5 md:h-6" id="logo">
        </div>
        
        <!-- Desktop Navigation Menu -->
        <nav class="hidden md:flex items-center space-x-6">
          <a href="#home" class="text-gray-400 hover:text-accent transition-colors duration-300">Home</a>
          <a href="#about" class="text-gray-400 hover:text-accent transition-colors duration-300">About</a>
          <a href="#resume" class="text-gray-400 hover:text-accent transition-colors duration-300">Resume</a>
          <a href="#projects" class="text-gray-400 hover:text-accent transition-colors duration-300">Projects</a>
          <a href="#contact" class="text-gray-400 hover:text-accent transition-colors duration-300">Contact</a>
        </nav>
        
        <!-- Mobile Menu Button -->
        <div class="menu md:hidden">
          <BurgerMenu />
        </div>
      </div>
    </div>
  </header>
  

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const logo = document.getElementById('logo');
  
      logo.addEventListener('click', () => {
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
      
      // Add smooth scrolling for desktop navigation
      document.querySelectorAll('nav a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          
          const targetId = this.getAttribute('href');
          const targetElement = document.querySelector(targetId);
          
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth'
            });
          }
        });
      });
    });
  </script>

<style>
  .header{
    z-index: 100; /* Ensure the header is on top of other elements */
  }
  
  nav a {
    position: relative;
    font-weight: 500;
  }
  
  nav a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: #AFD34D;
    transition: width 0.3s ease;
  }
  
  nav a:hover::after {
    width: 100%;
  }
</style>
  
